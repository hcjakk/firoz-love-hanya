<script>
const text = "Hanya, do you love Firoz? ‚ù§Ô∏è";
let index = 0;
const typingEl = document.getElementById("typingText");

function typeEffect() {
  if (index < text.length) {
    typingEl.innerHTML += text.charAt(index);
    index++;
    setTimeout(typeEffect, 80);
  }
}
typeEffect();

const noBtn = document.getElementById("noBtn");
const yesBtn = document.getElementById("yesBtn");
const heartLoader = document.getElementById("heartLoader");
const resultContainer = document.getElementById("resultContainer");
const questionContainer = document.getElementById("questionContainer");
const bgMusic = document.getElementById("bgMusic");

// play music on first click
document.body.addEventListener("click", () => {
  bgMusic.play().catch(()=>{});
}, { once: true });

// move NO button
noBtn.addEventListener("mouseover", () => {
  const maxX = questionContainer.offsetWidth - noBtn.offsetWidth;
  const maxY = questionContainer.offsetHeight - noBtn.offsetHeight;

  noBtn.style.left = Math.random() * maxX + "px";
  noBtn.style.top = Math.random() * maxY + "px";
});

// YES click
yesBtn.addEventListener("click", () => {
  heartLoader.style.display = "block";
  launchConfetti();

  setTimeout(() => {
    heartLoader.style.display = "none";
    resultContainer.style.display = "block";
  }, 3000);
});

// confetti
function launchConfetti() {
  const duration = 1500;
  const end = Date.now() + duration;

  (function frame() {
    const confetti = document.createElement("div");
    confetti.style.position = "fixed";
    confetti.style.width = "8px";
    confetti.style.height = "8px";
    confetti.style.background = `hsl(${Math.random()*360},100%,50%)`;
    confetti.style.left = Math.random() * window.innerWidth + "px";
    confetti.style.top = "-10px";
    confetti.style.borderRadius = "50%";
    confetti.style.pointerEvents = "none";
    confetti.style.zIndex = "9999";

    document.body.appendChild(confetti);

    let fall = 0;
    const drop = setInterval(() => {
      fall += 5;
      confetti.style.top = fall + "px";
      if (fall > window.innerHeight) {
        clearInterval(drop);
        confetti.remove();
      }
    }, 16);

    if (Date.now() < end) requestAnimationFrame(frame);
  })();
}
</script>

